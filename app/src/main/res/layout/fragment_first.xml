    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".FirstFragment">


        <Button
            android:id="@+id/buttonToSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game 1"
            app:layout_constraintBottom_toTopOf="@id/buttonToThird"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game 2"
        app:layout_constraintBottom_toTopOf="@id/buttonToFourth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonToSecond" />

    <Button
        android:id="@+id/buttonToFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonToThird" />
